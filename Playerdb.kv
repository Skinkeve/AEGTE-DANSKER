#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton
#: import main Playerdb

<MenuScreen>:
    name: "menu"
    name_input: name_input
    player_list: list_view
    BoxLayout:
        padding: 10
        spacing: 10
        orientation: "vertical"
        BoxLayout:
            size_hint_y: None
            height: "40dp"

            Label:
                text: "Playername"
            TextInput:
                id: name_input
                multiline: False

        BoxLayout:
            size_hint_y: None
            height: "40dp"
            Button:
                text: "Submit new player" #teksten der står på knappen
                size_hint_x: 15
                on_press: root.submit_player()
            Button:
                text: "Delete player" #teksten der står på knappen
                size_hint_x: 15
                on_press: root.remove_player()
            Button:
                text: "Start" #teksten der står på knappen
                size_hint_x: 15
                #on_press: root.start_game()
                on_press:
                    root.manager.transition.direction = 'left'
                    root.start_game()
            Button:
                text: "Manage cardpack" #teksten der står på knappen
                size_hint_x: 15
                on_press:
                    root.manager.transition.direction = 'left'
                    root.pack_pick()
    #kæmpe problemer med adapteren nedenfor
        ListView:
            id: list_view
            adapter:
                ListAdapter(data=[], cls=main.PLayerlistbtn)

<GameScreen>:
    name: "game"
    FloatLayout:
        padding: 10
        spacing: 10
        Button:
            text: "Return"
            size_hint: .5,.10
            pos_hint: {'x':0,'top':1}
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'menu'
        Button:
            text: "Next"
            size_hint: .5, .25
            pos_hint: {'center_x':0.5,'y':0}
            on_press:
                root.Nextcard()
        Label:
            text: root.card_text

<PackScreen>:
    name: "pack"
    BoxLayout:
        padding: 10
        spacing: 10
        Button:
            text: "Return"
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'menu'
        Button:
            text: "Card calibration"
        Button:
            text: "Create cards"
        Button:
            text: "Pick card pack"
