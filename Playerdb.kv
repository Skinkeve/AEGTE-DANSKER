#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton
#: import main Playerdb

<MenuScreen>:
    name: "menu"
    name_input: name_input
    player_list: list_view
    BoxLayout:
        padding: 10
        spacing: 10
        orientation: "vertical"
        BoxLayout:
            size_hint_y: None
            height: "40dp"

            Label:
                text: "Playername"
            TextInput:
                id: name_input
                multiline: False

        BoxLayout:
            size_hint_y: None
            height: "40dp"
            Button:
                text: "Submit new player" #teksten der står på knappen
                size_hint_x: 15
                on_press: root.submit_player()
            Button:
                text: "Delete player" #teksten der står på knappen
                size_hint_x: 15
                on_press: root.remove_player()
            Button:
                text: "Start game" #teksten der står på knappen
                size_hint_x: 15
                #on_press: root.start_game()
                on_press: root.start_game()
            Button:
                text: "Manage cardpack" #teksten der står på knappen
                size_hint_x: 15
                on_press: root.pack_pick()
    #kæmpe problemer med adapteren nedenfor
        ListView:
            id: list_view
            adapter:
                ListAdapter(data=[], cls=main.PLayerlistbtn)

<GameScreen>:
    name: "game"
    Button:
        text: "Next card"
    Label:
        text: "Player"
    Label:
        text: "Score"
